{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@affexai/shared-types": ["./packages/shared-types/src"],
      "@affexai/shared-types/*": ["./packages/shared-types/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next"]
}
