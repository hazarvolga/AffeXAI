# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/affexai_dev
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=affexai_dev

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=3600

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache
CACHE_TTL=60

# S3/MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=affexai-files

# Application
APP_PROTOCOL=http
APP_HOST=localhost
PORT=3001

# Email encryption key (32 bytes) - GENERATE NEW IN PRODUCTION
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate-new-32-byte-hex-key-in-production

# Webhook secrets
RESEND_WEBHOOK_SECRET=whsec_your_webhook_secret

# Frontend URL - CRITICAL: Must match your frontend deployment
# Development: http://localhost:3000
# Staging: https://staging.yourapp.com
# Production: https://yourapp.com
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# ============================================
# PRODUCTION DEPLOYMENT EXAMPLES
# ============================================

# Example 1: Single Domain (yourapp.com)
# FRONTEND_URL=https://yourapp.com
# CORS_ORIGINS=https://yourapp.com

# Example 2: Multiple Environments
# FRONTEND_URL=https://app.yourcompany.com
# CORS_ORIGINS=https://app.yourcompany.com,https://staging.yourcompany.com

# Example 3: Custom Domain (Vercel/Netlify)
# FRONTEND_URL=https://affexai.vercel.app
# CORS_ORIGINS=https://affexai.vercel.app

# Example 4: Subdomain Setup
# FRONTEND_URL=https://portal.aluplan.com.tr
# CORS_ORIGINS=https://portal.aluplan.com.tr,https://admin.aluplan.com.tr
