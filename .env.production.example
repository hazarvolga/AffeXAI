# ============================================
# AFFEXAI PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file with real credentials!

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=affexai

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3001
FRONTEND_PORT=3000

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Base URLs
APP_URL=https://api.your-domain.com
FRONTEND_URL=https://your-domain.com

# ============================================
# JWT & SECURITY
# ============================================
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# ============================================
# AI PROVIDERS
# ============================================
# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# Google AI (Gemini)
GOOGLE_AI_API_KEY=AIza...
GOOGLE_GENAI_API_KEY=AIza...

# ============================================
# AWS S3 STORAGE
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=affexai-uploads
AWS_REGION=us-east-1

# ============================================
# EMAIL SERVICE (RESEND)
# ============================================
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Affexai

# ============================================
# FRONTEND PUBLIC VARIABLES
# ============================================
# These must be set at BUILD TIME for Next.js
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_SOCKET_URL=https://api.your-domain.com
NEXT_PUBLIC_APP_URL=https://your-domain.com

# ============================================
# COOLIFY SPECIFIC
# ============================================
# Coolify will inject these automatically:
# - SERVICE_FQDN_BACKEND (for backend domain)
# - SERVICE_FQDN_FRONTEND (for frontend domain)
# You can reference them in your configuration

# ============================================
# OPTIONAL SERVICES
# ============================================
# Monitoring (Optional)
# SENTRY_DSN=https://...

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=GA-...

# ============================================
# SECURITY NOTES
# ============================================
# 1. Generate secure passwords using: openssl rand -base64 32
# 2. Never commit this file with real values
# 3. Use Coolify's environment variable UI to set these
# 4. NEXT_PUBLIC_* variables are exposed to browser
# 5. Backend env vars are server-side only
