# ============================================
# AFFEXAI FRONTEND ENVIRONMENT CONFIGURATION
# ============================================

# Backend API URL - Must point to your NestJS backend
# Development: http://localhost:3001/api
# Staging: https://api-staging.yourapp.com/api
# Production: https://api.yourapp.com/api
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Application URLs
NEXT_PUBLIC_APP_NAME=Affexai
# This URL is used for:
# - Email verification links
# - Password reset links
# - Social sharing
# - Absolute URLs in emails
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (for Next.js API routes only - if needed)
# Note: Most DB operations should go through NestJS backend
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/affexai_dev

# Redis (for Next.js API routes cache - if needed)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Secret (must match backend for API route authentication)
JWT_SECRET=your-secret-key-change-in-production

# MinIO/S3 Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=affexai-files
NEXT_PUBLIC_S3_PUBLIC_URL=http://localhost:9000/affexai-files

# ============================================
# PRODUCTION DEPLOYMENT EXAMPLES
# ============================================

# Example 1: Vercel + Railway Backend
# NEXT_PUBLIC_API_URL=https://affexai-backend.up.railway.app/api
# NEXT_PUBLIC_APP_URL=https://affexai.vercel.app

# Example 2: Custom Domain Setup
# NEXT_PUBLIC_API_URL=https://api.aluplan.com.tr/api
# NEXT_PUBLIC_APP_URL=https://portal.aluplan.com.tr

# Example 3: Multiple Environments
# Development:
#   NEXT_PUBLIC_API_URL=http://localhost:3001/api
#   NEXT_PUBLIC_APP_URL=http://localhost:3000
#
# Staging:
#   NEXT_PUBLIC_API_URL=https://api-staging.yourapp.com/api
#   NEXT_PUBLIC_APP_URL=https://staging.yourapp.com
#
# Production:
#   NEXT_PUBLIC_API_URL=https://api.yourapp.com/api
#   NEXT_PUBLIC_APP_URL=https://yourapp.com

# Example 4: Same Domain (Backend + Frontend)
# Backend: yourapp.com/api
# Frontend: yourapp.com
# NEXT_PUBLIC_API_URL=https://yourapp.com/api
# NEXT_PUBLIC_APP_URL=https://yourapp.com

# ============================================
# IMPORTANT NOTES
# ============================================
# 1. NEXT_PUBLIC_* variables are exposed to the browser
# 2. Do NOT put secrets in NEXT_PUBLIC_* variables
# 3. Backend FRONTEND_URL must match NEXT_PUBLIC_APP_URL
# 4. CORS_ORIGINS in backend must include NEXT_PUBLIC_APP_URL
