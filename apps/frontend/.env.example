# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:9006/api

# Application Settings
NEXT_PUBLIC_APP_NAME=Affexai
NEXT_PUBLIC_APP_URL=http://localhost:9003

# Database Configuration (for API routes if using)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Redis Configuration (for API routes if using)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Secret (for API routes if using)
JWT_SECRET=your-secret-key-change-in-production

# MinIO/S3 Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET_NAME=affexai-files
NEXT_PUBLIC_S3_PUBLIC_URL=http://localhost:9000/affexai-files

